<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Online Builders Provider</title>

    <link href="~/CSS/bootstrap.min.css" rel="stylesheet" />
    <link href="~/CSS/animate.min.css" rel="stylesheet" />
    <link href="~/CSS/font-awesome.min.css" rel="stylesheet" />
    <link href="~/CSS/lightbox.css" rel="stylesheet" />
    <link href="~/CSS/main.css" rel="stylesheet" />
    <link href="~/CSS/presets/preset1.css" rel="stylesheet" />
    <link href="~/CSS/responsive.css" rel="stylesheet" />
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">

    <style>
        .scroll a:hover {
            color: black;
            background-color: #333333;
        }
    </style>



    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("Css", required: false)

</head>
<body>
    <div class="main-nav">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="HomeUI.aspx.html">
                    <h1><img class="img-responsive responsive-img" src="~/images/logo.png" alt="logo" style="margin-top:-40px"></h1>
                </a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li class="scroll ">@Html.ActionLink("Home", "Index", "Home")</li>
                                   
                            <li class="scroll">@Html.ActionLink("Engineer Info", "SaveEngInfo", "Engineerinfo")</li>
                            <li class="scroll">@Html.ActionLink("Supplier", "Save", "Supplier")</li>
                  
                          @if (Session["username"] != null || (string)(Session["username"]) != "")
        {
            int UserRole = Convert.ToInt16(Session["UserRole"]);

            if (UserRole == 1 || UserRole == 4)
            {
                <li class="scroll ">@Html.ActionLink("Job Post", "", "JobPost")</li>
                <li class="scroll">@Html.ActionLink("Client Profile", "Profile", "Client")</li>

            }
            if (UserRole == 1 || UserRole == 2 || UserRole == 3)
            {
                <li class="scroll ">@Html.ActionLink("Bid Job", "Index", "JobPost")</li>
                              
                              if(UserRole == 4|| UserRole==1)
                              {
                                  <li class="scroll">@Html.ActionLink("Hire Engineer","Index", "Engineerinfo")</li>
                              }
                               
            }

        }
                    <li class="scroll"><a href="#">Contact</a></li>
                    @if (Session["username"] != null || (string)(Session["username"]) != "")
                    {
                        int UserRole = Convert.ToInt16(Session["UserRole"]);
                        if (UserRole == 1)
                        {
                            <li class="scroll">@Html.ActionLink("Create User", "Registration", "User")</li>
                        }
                                 if (UserRole == 1 || UserRole == 2 || UserRole == 3 || UserRole == 4)
                        {
                             <li class="scroll ">@Html.ActionLink("Log Out", "Login", "User")</li>
                        }
                    }
                    @if (Session["username"] == null || (string)(Session["username"]) == "")
                    {
                        <li class="scroll ">@Html.ActionLink("Login", "Login", "User")</li>

                    }
                </ul>

            </div>
        </div>
    </div><!--/#main-nav-->
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Kazi Khurrom</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/fakeLoader.js"></script>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
