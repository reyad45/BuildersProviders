@model BPS.Models.HireEng

@{
    ViewBag.Title = "Hire";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using(Html.BeginForm())
{
    @Html.AntiForgeryToken();
    
     <div class="form-horizontal">
        <h4>Hire This Engineer</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group row">
            <div class="col-md-2">
               @Html.DisplayName("Engineer Name")
            </div>
            <div class="col-md-10">
                @Html.DisplayFor(model => model.EngineerName)
                
            </div>
        </div>
         <div class="form-Group row ">
             <div class="col-md-2">
                 @Html.DisplayName("Engineer Address")
             </div>
             <div class="col-md-10">
                @Html.DisplayFor(model=>model.engineerAddress)
                 
             </div>
         </div>
         <div class="form-group row">
             <div class="col-md-2">
                 @Html.DisplayName("Request Text")
             </div>
             <div class="col-md-10">
                 @Html.TextAreaFor(model => model.RequestText, new { @cols = "100", @rows = "3" })
                 <h6 class="text-danger text-uppercase"> @ViewBag.error</h6>
             </div>
         </div>
         <button type="submit" class="btn btn-primary" style="margin-left:190px"> Request Submit</button>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<span class="text-primary strong text-uppercase">@ViewBag.message</span>
            
        </div>
}

